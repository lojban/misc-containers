    RewriteCond %{REQUEST_URI}                     ^/tiki/tiki-index.php$
    RewriteCond %{QUERY_STRING}                    page=([^&]*)
    RewriteRule .*                                 /FAKE_REWRITE_MW/%1                                          [qsdiscard,next]
    RewriteRule ^/FAKE_REWRITE_MW/(.*)\+(.*)$      /FAKE_REWRITE_MW/$1_$2                                       [next]
