    #*******
    RewriteCond %{REQUEST_URI}                                  /l?mw/
    RewriteRule ^(.*)$                                          http://mw.lojban.org$1                          [last,redirect=permanent]
    RewriteCond %{REQUEST_URI}                                  /papri/
    RewriteRule ^(.*)$                                          http://mw.lojban.org$1                          [last,redirect=permanent]

